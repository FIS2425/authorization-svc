{
    "name": "authorization-svc",
    "version": "1.0.0",
    "description": "Authorization microservice for medical consultation application. Handles the authorization of users for the entire application ",
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=10.9.0",
        "yarn": "Yarn is not supported, please use npm",
        "pnpm": "PNPM is not supported, please use npm"
    },
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "node --env-file=.env ./src/config/index.js",
        "lint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "lint-fix": "eslint . --fix --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "dev": "node --watch --env-file=.env ./src/config/index.js",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "test:watch": "vitest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FIS2425/authorization-svc.git"
    },
    "keywords": [
        "microservice",
        "MERN"
    ],
    "author": "alvarobernal2412",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/FIS2425/authorization-svc/issues"
    },
    "homepage": "https://github.com/FIS2425/authorization-svc#readme",
    "devDependencies": {
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@eslint/js": "9.15.0",
        "@stylistic/eslint-plugin-js": "2.10.1",
        "@vitest/coverage-v8": "2.1.5",
        "eslint": "9.15.0",
        "globals": "15.12.0",
        "husky": "9.1.6",
        "ioredis-mock": "8.9.0",
        "mongodb-memory-server": "10.1.2",
        "supertest": "7.0.0",
        "vitest": "2.1.5"
    },
    "dependencies": {
        "bcrypt": "5.1.1",
        "cookie-parser": "1.4.7",
        "cors": "2.8.5",
        "express": "4.21.1",
        "ioredis": "5.4.1",
        "jsonwebtoken": "9.0.2",
        "kafka-node": "5.0.0",
        "mongoose": "8.8.1",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "swagger-ui-express": "5.0.1",
        "uuid": "11.0.3",
        "winston": "3.17.0",
        "yamljs": "0.3.0",
        "zod": "3.23.8"
    }
}
